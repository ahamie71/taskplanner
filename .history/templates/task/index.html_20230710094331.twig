{% extends 'base.html.twig' %}

{% block title %}Hello TaskController!{% endblock %}

{% block body %}


<section class="article">
{% for task in tasks %}
    <article>
        <h2>
            {{ task.title }}
        </h2>
        <div class="metadata">
            Ecrit le 
                                
            {{ article.D | date('d/m/Y') }}
            à 
                                
            {{ article.createdAt | date('H:i') }}
            dans la catégorie Politique                    
                                                
                            
        </div>
        <div class="contents">
            <img src="{{ article.image }}" alt"">
                {{ article.content | raw }}
                <a href="{{ path('blog_show',{'id' : article.id}) }}" class="btn btn-primary">
                    Lire la suite                            
                                                                        
                                            
                </a>
            </div>
        </article>
    {% endfor %}
{% endblock %}
